---
import { Icon } from "astro-icon/components";
import ContentSection from "../sections/FeatureContentSection.astro";
import type { FeatureItem } from "../../types";

const features: Array<FeatureItem> = [
  {
    title: "Derecho de Familia",
    description:
      "Procedimiento de divorcio, división de bienes, custodia de los hijos, pención alimenticia.",
    icon: "mdi:family",
    link: "/landing-pages/derecho-familia",
  },
  {
    title: "Derecho Sucesorio",
    description:
      "Procesos para la repartición de bienes después del fallecimiento. Disputas sobre testamentos y sucesiones intestadas.",
    icon: "mdi:home-group",
    link: "/landing-pages/landing-1",
  },
  {
    title: "Derechos Reales",
    description:
      "Defensa de los derechos sobre bienes muebeles e inmuebles, permitiendo disponer de estos de manera exclusiva.",
    icon: "mdi:account-lock",
    link: "/landing-pages/landing-1",
  },
  {
    title: "Responsabilidad Civil",
    description:
      "Reparación de daños o perjuicios como consecuencia de una acción u omisión, ya sea intencional o por negligencia.",
    icon: "mdi:handshake",
    link: "/landing-pages/landing-1",
  },
  {
    title: "Derecho de Obligaciones",
    description:
      "Creación, cumplimiento y extinción de obligaciones, princialmente derivadas de contratos.",
    icon: "mdi:contract",
    link: "/landing-pages/landing-1",
  },
];
---

<ContentSection title="Areas de especialidad" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon, link }) => (
        <li class="flex flex-col items-center gap-4 bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <a href={link} class="text-center font-extrabold text-lg hover:underline">
            {title}
          </a>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>